-- draw game

function _draw()
	if menu then
		drawmenu()
	elseif game then
		drawgame()
	elseif gameover then
		updategameover()
	end
end

function drawmenu()
	cls()
	print("⬅️ "..menuoptions[menuchoice].."➡️")
end
