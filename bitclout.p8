function _update60()
	if menu then
		updatemenu()
	elseif game then
		updategame()
	elseif gameover then
		updategameover()
	end
end

function updatemenu()
	menuoptions = {"choose","play","continue"}
	if btnp(0) then
		menuchoice = 2
	end	
	if btnp(1) then
		menuchoice = 3
	end
end
